<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tournity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".App.Match.View.Fragments.MatchViewActivity"
            android:label="@string/title_activity_match_view"
            android:theme="@style/NoActionBar"></activity>
        <activity
            android:name=".View.Activities.HomeActivity"
            android:label="@string/title_activity_home_activty" />
        <activity android:name=".App.User.View.Activities.RegisterActivity" />
        <activity android:name=".App.Group.View.Activities.PlayerOrTeamActivity" />
        <activity android:name=".App.Group.View.Activities.ListGroupActivity" />
        <activity android:name=".App.Tournament.View.Activities.TournamentViewActivity" />
        <activity
            android:name=".App.Match.View.Activities.SelectTypeMatchActivity"
            android:label="@string/title_activity_select_type_match" />
        <activity android:name=".App.Authentication.View.Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Activities.MainActivity" />
    </application>

</manifest>